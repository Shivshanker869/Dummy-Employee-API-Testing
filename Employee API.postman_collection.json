{
	"info": {
		"_postman_id": "e760ac06-4fa3-417d-bea5-9b9ace84c689",
		"name": "Employee API",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
		"_exporter_id": "44940297"
	},
	"item": [
		{
			"name": "Get All Employee",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Status is 200\", () => pm.response.to.have.status(200));\r",
							"const json = pm.response.json();\r",
							"pm.test(\"data is non-empty array\", () => {\r",
							"  pm.expect(json.data).to.be.an('array').that.is.not.empty;\r",
							"});\r",
							"pm.test(\"Response time < 3000ms\", () => pm.expect(pm.response.responseTime).to.be.below(3000));\r",
							""
						],
						"type": "text/javascript",
						"packages": {}
					}
				}
			],
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{baseUrl}}/employees",
					"host": [
						"{{baseUrl}}"
					],
					"path": [
						"employees"
					]
				}
			},
			"response": []
		},
		{
			"name": "Create Employee",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Status is 200\", () => pm.response.to.have.status(200));\r",
							"const res = pm.response.json();\r",
							"pm.test(\"Response status is success\", () => pm.expect(res.status).to.eql(\"success\"));\r",
							"pm.test(\"Employee name is correct\", () => pm.expect(res.data.name).to.eql(\"QA User\"));\r",
							"\r",
							"// Save ID for delete test\r",
							"pm.environment.set(\"empId\", res.data.id);\r",
							"pm.test(\"Employee ID saved in environment\", () => pm.expect(pm.environment.get(\"empId\")).to.exist);\r",
							""
						],
						"type": "text/javascript",
						"packages": {}
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [],
				"body": {
					"mode": "raw",
					"raw": "{\r\n  \"name\": \"QA User\",\r\n  \"salary\": \"45000\",\r\n  \"age\": \"27\"\r\n}\r\n",
					"options": {
						"raw": {
							"language": "json"
						}
					}
				},
				"url": {
					"raw": "{{baseUrl}}/create",
					"host": [
						"{{baseUrl}}"
					],
					"path": [
						"create"
					]
				}
			},
			"response": []
		},
		{
			"name": "Delete Employee.",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Status is 200\", () => pm.response.to.have.status(200));\r",
							"const delRes = pm.response.json();\r",
							"pm.test(\"Delete was successful\", () => {\r",
							"  const msg = (delRes.status || delRes.message || \"\").toString().toLowerCase();\r",
							"  pm.expect(msg).to.include(\"success\");\r",
							"});\r",
							""
						],
						"type": "text/javascript",
						"packages": {}
					}
				}
			],
			"request": {
				"method": "DELETE",
				"header": [],
				"url": {
					"raw": "{{baseUrl}}/delete/{{empId}}",
					"host": [
						"{{baseUrl}}"
					],
					"path": [
						"delete",
						"{{empId}}"
					]
				}
			},
			"response": []
		}
	]
}